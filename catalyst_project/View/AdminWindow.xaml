<Window x:Class="catalyst_project.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Window" Width="1380" Height="800" WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">

        <TabControl  HorizontalAlignment="Left" TabStripPlacement="Left" VerticalAlignment="Top" BorderBrush="Gainsboro" Width="1360" Height="750">
            <TabItem   Header="History" Height="30" Width="200" Background="AliceBlue">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Label Content="Search By" Width="200"></Label>
                            <ComboBox Width="200" />
                            <TextBox Width="200" Name="txb_history_search_val" Margin ="20,0,0,0"/>
                            <Button Content="Search" Name="btn_history_search" Margin="20,0,0,0" Width="50" Click="btns_history_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Label Content="Filter History Between" Width="200"></Label>
                            <DatePicker Name="date_history_from" Width="200"/>
                            <DatePicker Name="date_history_to" Width="200" Margin="20,0,0,0"/>
                            <Button Content="Filter" Name="btn_history_filter" Margin="20,0,0,0" Width="50" Click="btns_history_Click"/>
                        </StackPanel>
                    </StackPanel>
                    <Border BorderThickness="5" Grid.Column="0" Grid.Row="1" BorderBrush="LightBlue">
                        <Grid >
                            <DataGrid Grid.Column="0" Grid.Row="1" Width="1120"   Margin="10" Name="grid_history" SelectionChanged="grid_history_SelectionChanged" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Id}" />
                                    <DataGridTextColumn Header="Catalyst ID" Width="100" Binding="{Binding Catalyst_id}" />
                                    <DataGridTextColumn Header="Data Group" Width="200" Binding="{Binding Group_name}" />
                                    <DataGridTextColumn Header="Field Name" Width="200" Binding="{Binding Field_name}" />
                                    <DataGridTextColumn Header="User" Width="100" Binding="{Binding User_name}" />
                                    <DataGridTextColumn Header="Old Value" Width="150" Binding="{Binding Old_value}" />
                                    <DataGridTextColumn Header="New Value" Width="150" Binding="{Binding New_value}" />
                                    <DataGridTextColumn Header="Date" Width="110" Binding="{Binding ModifiedDate}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>                           
            </TabItem>
            <TabItem Header="User Control" Height="30" Width="200" Background="AliceBlue">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Label Content="Search By" Width="150"/>
                        <ComboBox Width="200" Name="cmb_search_user" Margin="20,0,0,0">
                            <ComboBoxItem Content="Role"/>
                            <ComboBoxItem Content="Code"/>
                            <ComboBoxItem Content="Firstname"/>
                            <ComboBoxItem Content="Lastname"/>
                            <ComboBoxItem Content="Institute"/>
                            <ComboBoxItem Content="Show All"/>
                        </ComboBox>
                        <TextBox Width="200" Margin="20,0,0,0" Name="txb_user_search_value"/>
                        <Button Width="50" Content="Search" Name="btn_user_search" Margin="20,0,0,0" Click="btns_user_Click"/>
                    </StackPanel>
                    <Border BorderThickness="5" Grid.Column="0" Grid.Row="1" BorderBrush="LightBlue">
                        <Grid >
                            <DataGrid Width="1130" Height="500"  Name="grid_user" AutoGenerateColumns="False" SelectionChanged="grid_user_SelectionChanged" SelectionMode="Single" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Width="100" Binding="{Binding Id}" />
                                <DataGridTextColumn Header="Role" Width="150" Binding="{Binding Role}" />
                                <DataGridTextColumn Header="Code" Width="150" Binding="{Binding Code}" />
                                <DataGridTextColumn Header="Firstname" Width="150" Binding="{Binding First_name}" />
                                <DataGridTextColumn Header="Lastname" Width="150" Binding="{Binding Last_name}" />
                                <DataGridTextColumn Header="Password" Width="150" Binding="{Binding Password}" />
                                <DataGridTextColumn Header="Institute" Width="150" Binding="{Binding Institute}" />
                                <DataGridTextColumn Header="Registered" Width="122" Binding="{Binding Registered_date}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    </Border>
                    <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" >
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="User ID" Width="200" />
                                <TextBox Name="txb_userid" Width="200" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="User Role" Width="200"/>
                                <ComboBox Name="cmb_userrole" Width="200" DisplayMemberPath="Role"  SelectedValuePath="Id"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="User Code" Width="200"/>
                                <TextBox Name="txb_usercode" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="First Name" Width="200"/>
                                <TextBox Name="txb_userfirst" Width="200"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="Last Name" Width="200"/>
                                <TextBox Name="txb_userlast" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="Password" Width="200"/>
                                <TextBox Name="txb_userpass"  Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="Institute" Width="200"/>
                                <TextBox Name="txb_userinstitute" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Label Content="Registered Date" Width="200"/>
                                <TextBox Name="txb_userdate" Width="200" IsEnabled="False"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                            <Button Content="Add" Name="btn_user_add" Margin="7" Width="70" Height="30" Background="LightGreen" Click="btns_user_Click"/>
                            <Button Content="Update" Name="btn_user_update" Margin="7" Width="70" Height="30" Background="LightBlue" Click="btns_user_Click"/>
                            <Button Content="Clear" Name="btn_user_clear" Margin="7" Width="70" Height="30" Background="LightBlue" Click="btns_user_Click"/>
                            <Button Content="Delete" Name="btn_user_delete" Margin="7" Width="70" Height="30" Background="Red" Click="btns_user_Click"/>
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Dropdown Control" Height="30" IsEnabled="False" Width="200" Background="AliceBlue" >

            </TabItem>
