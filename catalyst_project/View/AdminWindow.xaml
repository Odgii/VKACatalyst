<Window x:Class="catalyst_project.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Window" Width="800" Height="600" WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">

        <TabControl  HorizontalAlignment="Left" TabStripPlacement="Left" VerticalAlignment="Top" BorderBrush="Gainsboro" Width="800" Height="600">
            <TabItem   Header="History" Width="200" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>                   
                    <ListView Grid.Column="0" Grid.Row="0" Width="600" Height="400">
                        <ListView.View>
                            <GridView />
                        </ListView.View>
                    </ListView>
                    
                </Grid>
            </TabItem>
            <TabItem Header="User Control" Width="200">

            </TabItem>
            <TabItem Header="Dropdown Control" Width="200">

            </TabItem>
            <TabItem Visibility="Collapsed" Header="haha" Width="100">

            </TabItem>
            <TabItem Header="Data Approval" Width="200">

            </TabItem>
            <TabItem Header="Reports" Width="200">

            </TabItem>
            <TabItem Header="Bugs Reported" Width="200">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
