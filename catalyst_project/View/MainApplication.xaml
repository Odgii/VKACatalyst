<Window x:Class="catalyst_project.View.MainApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:catalyst_project.UIComponents"    
        Title="Catalyst" Name="MainApp" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen" WindowState="Maximized" >
    
    <Grid Background="LightBlue">
        <!--Row, Column definition of the grid-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Main Menu-->
        <Menu Grid.ColumnSpan="1" IsMainMenu="True">
            <MenuItem Header="_Catalyst" >
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open From Server " />
                <MenuItem Header="_Open From Local Storage" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Search" Click="menu_search_Click"/>
            <MenuItem Header="_Local Files" />
            <MenuItem Header="_Connection">
                <MenuItem Header="Check Connection"/>
            </MenuItem>
            <MenuItem Header="Error Report">
                <MenuItem Name="menu_data_error" Header="Report Data Error" Click="menu_data_error_Click"/>
                <MenuItem Name="menu_software_bug" Header="Report Software Bug" Click="menu_software_bug_Click"/>
            </MenuItem>
            <MenuItem Header="_User">
                <MenuItem Header="_Current User - User Name"/>
                <MenuItem Header="_Sign out"/>
            </MenuItem>
            <MenuItem Header="_Admin Panel"  Click="menu_admin_panel_Click"/>
            <MenuItem Header="_Help"/>
        </Menu>

        <!--Catalyst Data for Each Parameter Group-->

        <TabControl TabStripPlacement="Left" Grid.Column="0" Grid.Row="1"  Margin="5" BorderBrush="Gainsboro">
            
            <TabItem Name="tab_generalInfo" Header="General Information" IsSelected="True" Height="40">
                <ScrollViewer  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                    <Grid x:Name="grid_generalInfo"  VerticalAlignment="Center"  HorizontalAlignment="Center"  ShowGridLines="False" SnapsToDevicePixels="True">
                        

                    <Grid.ColumnDefinitions>
                        <!--7 Columns defined-->
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!--Beginning of Column 0,1-->
                    <!--Row 0, Column 0 -->
                    <StackPanel Name="st_catalystID" Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <Label Content="Catalyst ID" Width="200"/>
                            <local:CustomTextBox x:Name="catalyst_id" GroupTitle="General Information" LabelTitle="Catalyst ID" TableName="Catalyst"  FieldName="catalyst_id" UpdateId="catalyst_id" KeyUp="update_KeyUp" ContentType="text"  IsEnabled="False" Margin="0,3" Width="200"/>                            
                    </StackPanel>

                    <!--Row 1, Column 0 -->
                    <StackPanel Name="st_approved" Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                        <Label Content="Catalyst Data is Approved" Width="200" />
                            <local:CustomCheckBox x:Name="cxb_is_approved"  GroupTitle="General Information" LabelTitle="Catalyst Data is Approved" TableName="Catalyst"  FieldName="is_approved" UpdateId="catalyst_id" Click="update_Click"  Width="200" Margin="2,10,0,0"  IsChecked="False" IsEnabled="False"/>
                    </StackPanel>
                        
                    <!--Row 2, Column 0 -->
                    <StackPanel Name="st_confidentiality" Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                            <Label Content="Confidentiality" Width="200"/>
                            <local:CustomCheckBox TableName="Catalyst"  GroupTitle="General Information" LabelTitle="Confidentiality" FieldName="is_data_available" x:Name="cxb_confidentiality" UpdateId="catalyst_id"  Click="update_Click"  Margin="2,10,0,0"  IsChecked="True"/>
                    </StackPanel>
                        
                    <!--Row 4, Column 0 -->
                    <StackPanel Name="st_catalyst_type" Orientation="Horizontal" Grid.Row="4" Grid.Column="0">
                         <Label Content="Catalyst Type" Width="200"/>
                            <local:CustomComboBox x:Name="cmb_catalyst_type" ValueQuery="select * from CatalystType where catalyst_type_id = " GroupTitle="General Information" LabelTitle="Catalyst Type" TableName="Catalyst" FieldName="catalyst_type_id" UpdateId="catalyst_id" Margin="0,3" Width="200" DisplayMemberPath="Type"  SelectedValuePath="Id" SelectionChanged="cmb_catalyst_type_SelectionChanged"/>
                    </StackPanel>
                   
                    <!--Row 5, Column 0 -->
                    <StackPanel Name="st_production" Orientation="Horizontal" Grid.Row="5" Grid.Column="0">
                            <Label  Content="Production Date" Width="200"/>
                            <local:CustomDatePicker x:Name="dtp_production_date" GroupTitle="General Information" LabelTitle="Production Date" TableName="GeneralInformation" FieldName="production_date" UpdateId="catalyst_id"   SelectedDateChanged="update_SelectedDateChanged"  Margin="0,3" Width="200"/>
                    </StackPanel>
                        
                    <!--Row 6 Column 0 -->
                    <StackPanel Name="st_manufacturer" Orientation="Horizontal" Grid.Row="6" Grid.Column="0">
                            <Label Content="Manufacturer" Width="200"/>
                            <local:CustomComboBox x:Name="cmb_manufacturer" GroupTitle="General Information" LabelTitle="Manufacturer" TableName="GeneralInformationManufacturer" FieldName="manufacturer_id"  UpdateId="general_id"   Margin="0,3" Width="200" SelectedValue="ID">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" Width="20" />
                                            <TextBlock Text="{Binding Name}" Width="180" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </local:CustomComboBox>
                    </StackPanel>
                    
                    <!--Row 7, Column 0 -->
                    <StackPanel Name="st_catalyst_nr" Orientation="Horizontal" Grid.Row="7" Grid.Column="0">
                            <Label Content="Catalyst Nr#" Width="200"/>
                            <local:CustomTextBox x:Name="txb_catalyst_nr" GroupTitle="General Information" LabelTitle="Catalyst Nr#" TableName="GeneralInformation" KeyUp="update_KeyUp" FieldName="catalyst_number" UpdateId="general_id" ContentType="text"   Margin="0,3" Width="200"/>
                    </StackPanel>
                    
                    <!--Row 8, Column 0 -->
                    <StackPanel Name="st_substrat_nr" Orientation="Horizontal" Grid.Row="8" Grid.Column="0">
                            <Label Content="Substrat Nr#" Width="200"/>
                            <local:CustomTextBox x:Name="txb_substrat_nr" GroupTitle="General Information" LabelTitle="Substrat Nr#" TableName="GeneralInformation" FieldName="substract_number" UpdateId="general_id" KeyUp="update_KeyUp"  ContentType="text"  Margin="0,3" Width="200"/>
                    </StackPanel>

                    <!--Row 10, Column 0-->                      
                    <StackPanel Name="st_project_nr" Orientation="Horizontal" Grid.Row="10" Grid.Column="0">
                            <Label Content="Project Nr#" Width="200"/>
                            <local:CustomTextBox x:Name="txb_project_number" GroupTitle="General Information" LabelTitle="Project Nr#" TableName="GeneralInformation" FieldName="project_number" UpdateId="general_id" KeyUp="update_KeyUp" ContentType="text"  Margin="0,3" Width="200"/>
                    </StackPanel>

                    <!--Row 11, Column 0-->
                    <StackPanel Name="st_customer" Orientation="Horizontal" Grid.Row="11" Grid.Column="0">
                            <Label Content="Customer" Width="200"/>
                            <local:CustomTextBox x:Name="txb_customer" GroupTitle="General Information" LabelTitle="Customer" TableName="GeneralInformation" FieldName="customer" UpdateId="general_id"  KeyUp="update_KeyUp"  ContentType="text" ToolTip="The One, Who gave catalyst to let it analyze" Margin="0,3" Width="200"/>
                    </StackPanel>

                    <!--Row 12, Column 0-->
                    <StackPanel Name="st_project_manager" Orientation="Horizontal" Grid.Row="12" Grid.Column="0">
                            <Label Content="Project Manager" Width="200"/>
                            <local:CustomTextBox x:Name="txb_project_manager" GroupTitle="General Information" LabelTitle="Project Manager" TableName="GeneralInformation" FieldName="project_manager" UpdateId="general_id" KeyUp="update_KeyUp" ContentType="text" Margin="0,3" Width="200"/>
                    </StackPanel>

                    <!--Row 13, Column 0-->
                     <StackPanel Name="st_eats" Orientation="Horizontal" Grid.Row="13" Grid.Column="0">
                            <Label Content="EATS Case Worker" Width="200"/>
                            <local:CustomTextBox x:Name="txb_eats_case_worker" GroupTitle="General Information" LabelTitle="EATS Case Worker" TableName="GeneralInformation" FieldName="eats_case_worker" UpdateId="general_id" KeyUp="update_KeyUp"  ContentType="text"  Margin="0,3" Width="200"/>
                     </StackPanel>

                     <!--Row 14, Column 0-->
                     <StackPanel Name="st_target_country" Orientation="Horizontal" Grid.Row="14" Grid.Column="0">
                            <Label Content="Target Country" Width="200"/>
                            <local:CustomTextBox x:Name="txb_target_country" GroupTitle="General Information" LabelTitle="Target Country" TableName="GeneralInformation" FieldName="target_country" UpdateId="general_id" KeyUp="update_KeyUp"   ContentType="text"  ToolTip="e.g. USA" Margin="0,3" Width="200"/>
                     </StackPanel>

                     <!--Row 15, Column 0-->
                     <StackPanel Name="st_target_emission" Orientation="Horizontal" Grid.Row="15" Grid.Column="0">
                            <Label Content="Target Emission Legislation" Width="200"/>
                            <local:CustomTextBox x:Name="txb_target_emission_legislation" GroupTitle="General Information" LabelTitle="Target Emission Legislation" TableName="GeneralInformation" FieldName="target_emission_legislation" UpdateId="general_id" KeyUp="update_KeyUp"   ContentType="text"  ToolTip="e.g. Tier 4 f" Margin="0,3" Width="200"/>
                     </StackPanel>

                     <!--Row 16, Column 0-->
                     <StackPanel Name="st_field_of_app" Orientation="Horizontal" Grid.Row="16" Grid.Column="0">
                            <Label  Content="Field of Application" Width="200"/>
                            <local:CustomComboBox x:Name="cmb_field_of_app" GroupTitle="General Information" LabelTitle="Field of Application" TableName="GeneralInformationApplicationField" FieldName="app_field_id" UpdateId="general_id"   Margin="0,3" Width="200">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" Width="20" />
                                                <TextBlock Text="{Binding Name}" Width="180" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                             </local:CustomComboBox>
                     </StackPanel>
                        
                     <!--Row 17, Column 0-->
                     <StackPanel Name="st_config_system" Orientation="Horizontal" Grid.Row="17" Grid.Column="0">
                            <Label Content="Target Configuration of EATS" Width="200"/>
                            <local:CustomTextBox x:Name="txb_conf_of_target_system"  GroupTitle="General Information" LabelTitle="Target Configuration of EATS" TableName="GeneralInformation" FieldName="target_conf_system" UpdateId="general_id" KeyUp="update_KeyUp"   ContentType="text"  ToolTip="Positioning of Catalysts e.g. DOC-DPF-SCR" Margin="0,3" Width="200"/>
                     </StackPanel>

                     <!--Row 18, Column 0-->
                     <StackPanel Name="st_spec_engine" Orientation="Horizontal" Grid.Row="18" Grid.Column="0">
                            <Label Content="Specification of Engine" Width="200"/>
                            <local:CustomTextBox x:Name="txb_spec_of_engine" GroupTitle="General Information" LabelTitle="Specification of Engine"  TableName="GeneralInformation" FieldName="specification_engine" UpdateId="general_id" KeyUp="update_KeyUp"  ContentType="text" ToolTip="e.g. OM602" Margin="0,3" Width="200"/>
                      </StackPanel>

                      <!--Row 20, Column 0-->
                      <StackPanel Name="st_washcoat_comp" Orientation="Horizontal" Grid.Row="20" Grid.Column="0">
                            <Label Content="Washcoat, Catalytic Composition" Width="200"/>
                            <local:CustomComboBox x:Name="cmb_wash_cat_comp" GroupTitle="General Information" LabelTitle="Washcoat, Catalytic Composition" TableName="general_washcoat" FieldName="material_id" UpdateId="general_id"  Margin="0,3" Width="200">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" Width="20" />
                                            <TextBlock Text="{Binding WashcoatValue}" Width="180" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </local:CustomComboBox>
                        </StackPanel>


                        <!--Row 21, Column 0-->
                        <StackPanel Name="st_washcoat_loading" Orientation="Horizontal" Grid.Row="21" Grid.Column="0">
                            <Label  Content="Washcoat Loading" Width="200"/>
                            <StackPanel Orientation="Horizontal" Width="200">
                                <local:CustomTextBox x:Name="txb_washcoat_loading" GroupTitle="General Information" LabelTitle="Washcoat Loading" DefaultUnit="convertToGL" TableName="GeneralInformation" FieldName="washcoat_loading" UpdateId="general_id"  ContentType="double"  Height="25" Width="135" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                                <local:CustomComboBox  x:Name="cmb_washcoat_loading_unit" ValueQuery="itself" Convertible="yes" GroupTitle="General Information" LabelTitle="Washcoat Loading Unit" Height ="25" Width="60" SelectionChanged="update_SelectionChanged" SelectedIndex="0" Margin="5,0,0,0">
                                    <ComboBoxItem Content="g/l"/>
                                    <ComboBoxItem Content="g/ft³"/>
                                </local:CustomComboBox>
                            </StackPanel>
                        </StackPanel>

                        <!--Row 0, Column 2-->
                        <StackPanel Name="st_cell_density" Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                            <Label  Content="Cell Density" ToolTip="Number of Cells Per Square Inch" Width="200"/>
                            <local:CustomTextBox x:Name="txb_cell_density" GroupTitle="General Information" LabelTitle="Cell Density" TableName="GeneralInformation" FieldName="cell_density" UpdateId="general_id"   ContentType="int" Height="25" Width="135" ToolTip="Number of Cells Per Square Inch" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave" />
                            <Label Content="cpsi" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!--Row 1, Column 2-->
                        <StackPanel Name="st_wall_thickness" Orientation="Horizontal" Grid.Row="1" Grid.Column="2">
                            <Label Content="Wall Thickness" Width="200"/>
                            <StackPanel Orientation="Horizontal" Width="200">
                                <local:CustomTextBox x:Name="txb_wall_thickness" GroupTitle="General Information" DefaultUnit="convertToMil" LabelTitle="Wall Thickness" TableName="GeneralInformation" FieldName="wall_thickness" ContentType="int"  UpdateId="general_id" Height="25" Width="135" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave" />
                                <local:CustomComboBox x:Name="cmb_wall_thickness_meas" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Wall Thickness Unit" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="0">
                                    <ComboBoxItem Content="mil"/>
                                    <ComboBoxItem Content="mm"/>
                                </local:CustomComboBox>
                            </StackPanel>
                        </StackPanel>


                        <!--Row 2, Column 2-->
                        <StackPanel Name="st_substrate" Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
                            <Label Grid.Row="17" Grid.Column="3" Content="Substrate Boundary Shape" Width="200"/>
                            <local:CustomComboBox x:Name="cmb_substrate_boundary_shape" ValueQuery="select * from SubstrateBoundaryShape where shape_id = "  GroupTitle="General Information" LabelTitle="Substrate Boundary Shape" TableName="GeneralInformation" FieldName="shape_id" UpdateId="general_id" SelectionChanged="update_SelectionChanged" Margin="0,3" DisplayMemberPath="Shape" SelectedValuePath="Id" Width="200"/>
                        </StackPanel>


                        <!--Row 3, Column 2-->
                        <StackPanel Name="st_volume" Orientation="Horizontal" Grid.Row="3" Grid.Column="2">
                            <Label Content="Volume" ToolTip="Monolith Boundary Shape Volume" Width="200"/>
                            <local:CustomTextBox x:Name="txb_volume" GroupTitle="General Information" DefaultUnit="convertToLiter" LabelTitle="Volume" TableName="GeneralInformation" FieldName="volume"  UpdateId="general_id"  ContentType="int" Height="25" Width="135" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomComboBox  x:Name="cmb_volume_meas" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Volume Unit" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="0">
                                <ComboBoxItem Content="liter"/>
                                <ComboBoxItem Content="mm³"/>
                                <ComboBoxItem Content="cm³"/>
                                <ComboBoxItem Content="m³"/>
                                <ComboBoxItem Content="ft³"/>
                                <ComboBoxItem Content="inch³"/>
                            </local:CustomComboBox>
                        </StackPanel>


                        <!--Row 4, Column 2-->
                        <StackPanel Name="st_monolith_length" Orientation="Horizontal" Grid.Row="4" Grid.Column="2">
                            <Label Content="Monolith Length" Width="200"/>
                            <local:CustomTextBox x:Name="txb_monolith_length" GroupTitle="General Information" DefaultUnit="convertToMMDouble" LabelTitle="Monolith Length" TableName="GeneralInformation" FieldName="length" UpdateId="general_id" ContentType="double" Height="25" Width="135" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomComboBox  x:Name="cmb_monolith_length_meas" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Monolith Length" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="3">
                                <ComboBoxItem Content="inch"/>
                                <ComboBoxItem Content="cm"/>
                                <ComboBoxItem Content="m"/>
                                <ComboBoxItem Content="mm"/>
                            </local:CustomComboBox>
                        </StackPanel>


                        <!--Row 5, Column 2-->
                        <StackPanel Name="st_monolith_diameter" Orientation="Horizontal" Grid.Row="5" Grid.Column="2">
                            <Label Content="Monolith Diameter" Width="200"/>
                            <local:CustomTextBox x:Name="txb_monolith_diameter" GroupTitle="General Information" DefaultUnit="convertToMMDouble" LabelTitle="Monolith Diameter" TableName="GeneralInformation" FieldName="diameter" UpdateId="general_id"  ContentType="double" Height="25" Width="135" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomComboBox  x:Name="cmb_monolith_diameter_meas" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Monolith Diameter Unit" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="3">
                                <ComboBoxItem Content="inch"/>
                                <ComboBoxItem Content="cm"/>
                                <ComboBoxItem Content="m"/>
                                <ComboBoxItem Content="mm"/>
                            </local:CustomComboBox>
                        </StackPanel>

                        <!--Row 6, Column 2-->
                        <StackPanel Name="st_monolith_material" Orientation="Horizontal" Grid.Row="6" Grid.Column="2">
                            <Label  Content="Monolith Material" Width="200"/>
                            <local:CustomComboBox x:Name="cmb_monoloth_material" ValueQuery="select * from MonolithMaterial where  monolith_material_id = " GroupTitle="General Information" LabelTitle="Monolith Material Unit" TableName="GeneralInformation" FieldName="monolith_material_id"  UpdateId="general_id" SelectionChanged="update_SelectionChanged" Margin="0,3"  DisplayMemberPath="Material" SelectedValuePath="Id" SelectedIndex="0" Width="200"/>
                        </StackPanel>

                        <!--Row 7, Column 2-->
                        <StackPanel Name="st_zone_coating" Orientation="Horizontal" Grid.Row="7" Grid.Column="2">
                            <Label Content="Zone Coating" Width="200"/>
                            <local:CustomCheckBox x:Name="cbx_zone_coating" GroupTitle="General Information" LabelTitle="Zone Coating" TableName="GeneralInformation" FieldName="zone_coating" UpdateId="general_id" Click="update_Click" Margin="2,10,0,0"  IsChecked="True" Width="200"/>
                        </StackPanel>

                        <!--Row 8, Column 2-->
                        <StackPanel Name="st_slip_catalyst" Orientation="Horizontal" Grid.Row="8" Grid.Column="2">
                            <Label Content="Slip Catalyst Applied" Width="200"/>
                            <local:CustomCheckBox x:Name="cbx_slip_catalyst_applied" GroupTitle="General Information" LabelTitle="Slip Catalyst Applied" TableName="GeneralInformation" FieldName="slip_catalyst_applied" UpdateId="general_id" Click="update_Click" Margin="2,10,0,0" Width="200"/>
                        </StackPanel>


                        <!--Row 9, Column 2-->
                        <StackPanel Name="st_maxtemp_axial" Orientation="Horizontal" Grid.Row="9" Grid.Column="2">
                            <Label  Content="Max Temperature Gradient Axial" Width="200"/>
                            <local:CustomTextBox x:Name="txb_max_temp_grad_axial" GroupTitle="General Information" LabelTitle="Max Temperature Gradient Axial"  TableName="GeneralInformation" FieldName="max_temp_gradient_axial" UpdateId="general_id"  ContentType="double" Height="25" Width="135" ToolTip="Maximum Temperature Gradient Axial" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"   />
                            <Label Content="K" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!--Row 10, Column 2-->
                        <StackPanel Name="st_maxtemp_radial" Orientation="Horizontal" Grid.Row="10" Grid.Column="2">
                            <Label Content="Max Temperature Gradient Radial" Width="200"/>
                            <local:CustomTextBox x:Name="txb_max_temp_grad_radial" GroupTitle="General Information" LabelTitle="Max Temperature Gradient Radial" TableName="GeneralInformation" FieldName="max_temp_gradient_radial"  UpdateId="general_id"  ContentType="double" Height="25" Width="135" ToolTip="Max Temperature Gradient Radial" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"   />
                            <Label Content="K" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!--Row 11, Column 2-->
                        <StackPanel Name="st_maxtemp_peak" Orientation="Horizontal" Grid.Row="11" Grid.Column="2">
                            <Label  Content="Max Temperature Limit -Peak" Width="200"/>
                            <local:CustomTextBox x:Name="txb_max_temp_limit_peak" GroupTitle="General Information" DefaultUnit="convertToCelsius" TableName="GeneralInformation" LabelTitle="Max Temperature Limit -Peak" FieldName="max_temp_limitation_peak" UpdateId="general_id"  ContentType="double"  Height="25" Width="135" ToolTip="Catalyst Peak Temperature For Short Peaks" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomComboBox  x:Name="cmb_max_temp_limit_peak" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Max Temperature Limit -Peak Unit" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="0">
                                <ComboBoxItem Content="°C"/>
                                <ComboBoxItem Content="K"/>
                                <ComboBoxItem Content="°F"/>
                            </local:CustomComboBox>
                        </StackPanel>

                        <!--Row 12, Column 2-->
                        <StackPanel Name="st_maxtemp_longterm" Orientation="Horizontal" Grid.Row="12" Grid.Column="2">
                            <Label Content="Max Temperature Limit -Long Term" Width="200"/>
                            <local:CustomTextBox x:Name="txb_max_temp_limit_longterm" GroupTitle="General Information" DefaultUnit="convertToCelsius" LabelTitle="Max Temperature Limit -Long Term" TableName="GeneralInformation" FieldName="max_temp_limitation_longterm"  UpdateId="general_id" ContentType="double" Height="25" Width="135" ToolTip="Catalyst Peak Temperature For Long Term Operation " KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomComboBox  x:Name="cmb_max_temp_limit_longterm" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Max Temperature Limit -Long Term Unit" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="0">
                                <ComboBoxItem Content="°C"/>
                                <ComboBoxItem Content="K"/>
                                <ComboBoxItem Content="°F"/>
                            </local:CustomComboBox>
                        </StackPanel>

                        <!--Row 13, Column 2-->
                        <StackPanel Name="st_maxhc" Orientation="Horizontal" Grid.Row="13" Grid.Column="2">
                            <Label  Content="Max HC Limit" Width="200"/>
                            <local:CustomTextBox x:Name="txb_max_hc_limit" GroupTitle="General Information" LabelTitle="Max HC Limit" TableName="GeneralInformation" FieldName="max_hc_limit" UpdateId="general_id" KeyUp="update_KeyUp" ContentType="text" Height="25" Width="135" ToolTip="Maximum HC limit" />
                            <Label Content="g/l" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!--Row 14, Column 2-->
                        <StackPanel Name="st_segmentxy" Orientation="Horizontal" Grid.Row="14" Grid.Column="2">
                            <Label Content="Segmentation size X, Y" Width="200"/>
                            <local:CustomTextBox x:Name="txb_segment_x" GroupTitle="General Information" DefaultUnit="convertToInch" LabelTitle="Segmentation size X" TableName="GeneralInformation" FieldName="segmentation_size_x" UpdateId="general_id"  ContentType="double" Height="25" Width="65" ToolTip="Segmentation size X" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomTextBox x:Name="txb_segment_y" GroupTitle="General Information" DefaultUnit="convertToInch" LabelTitle="Segmentation size Y" TableName="GeneralInformation" FieldName="segmentation_size_y" UpdateId="general_id"  ContentType="double" Height="25" Width="65" ToolTip="Segmentation size Y" Margin="5,0,0,0" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"  />
                            <local:CustomComboBox  x:Name="cmb_segmentation_meas" ValueQuery="itself" Convertible="yes" SelectionChanged="update_SelectionChanged" GroupTitle="General Information" LabelTitle="Segmentation size X, Y Unit" Height ="25" Width="60" Margin="5,0,0,0" SelectedIndex="0">
                                <ComboBoxItem Content="inch"/>
                                <ComboBoxItem Content="m"/>
                                <ComboBoxItem Content="cm"/>
                                <ComboBoxItem Content="mm"/>
                            </local:CustomComboBox>
                        </StackPanel>


                        <!--Row 15, Column 2-->
                        <StackPanel Name="st_loss_coef" Orientation="Horizontal" Grid.Row="15" Grid.Column="2">
                            <Label Content="Pressure Loss Coefficient" Width="200"/>
                            <local:CustomTextBox x:Name="txb_prec_loss_coef"  GroupTitle="General Information" LabelTitle="Pressure Loss Coefficient" TableName="GeneralInformation" FieldName="pressure_loss_coefficient" UpdateId="general_id"  ContentType="double" Height="25" Width="200" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"   />
                        </StackPanel>

                        <!--Row 16, Column 2-->
                        <StackPanel Name="st_soot_mass" Orientation="Horizontal" Grid.Row="16" Grid.Column="2">
                            <Label Content="Soot Mass Limit" Width="200"/>
                            <local:CustomTextBox x:Name="txb_soot_mass_limit" GroupTitle="General Information" LabelTitle="Soot Mass Limit" TableName="GeneralInformation" FieldName="soot_mass_limit" UpdateId="general_id"  ContentType="double" Height="25" Width="135" KeyUp="update_KeyUp" MouseLeave="validationMouseLeave"   />
