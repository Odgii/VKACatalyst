                            <Label  Content="Support Material Loading" Width="250"/>
                            <local:CustomTextBox x:Name="txb_support_mtr_1"  GroupTitle="Chem./Phys. Analysis" LabelTitle="Support Material Loading" TableName="SupportMaterial" FieldName="support_material_loading" KeyUp="update_KeyUp" ContentType="text"  Margin="0,3" Width="160" />
                            <Label Content="Value" Width="40"/>
                            <local:CustomTextBox x:Name="txb_support_val_1" GroupTitle="Chem./Phys. Analysis" LabelTitle="Support Material Loading Value" TableName="SupportMaterial" FieldName="support_material_loading_value" KeyUp="update_KeyUp" ContentType="double"  ToolTip="Value  of Support Material " Width="70" Margin="10,3" MouseLeave="validationMouseLeave"   />
                            <local:CustomComboBox x:Name="cmb_sup_1" ValueQuery="select* from  UnitSupport where  support_unit_id = " GroupTitle="Chem./Phys. Analysis" LabelTitle="Support Material Loading Unit" TableName="SupportMaterial"  FieldName="support_unit_id"  SelectionChanged="update_SelectionChanged"  Width="50" Height="25" Margin="1,0,0,0" DisplayMemberPath="Unit" SelectedValuePath="Id"/>
                            <Button Content="Add" Width="50" Margin="9,3" Click="SupportMaterial_Clicked"/>
                        </StackPanel>
                                            
                        <!--Row 5, Column 0-->
                        <StackPanel Name="st_spec_surface" Orientation="Horizontal"  Grid.Row="5" Grid.Column="0">
                            <Label Content="SSA Specific Surface Area" Width="250"/>
                            <local:CustomTextBox x:Name="txb_spec_surface" GroupTitle="Chem./Phys. Analysis" LabelTitle="SSA Specific Surface Area" TableName="ChemPhysAnalysis" FieldName="ssa_specific_surface_area_" UpdateId="analysis_id" KeyUp="update_KeyUp" ContentType="double" Margin="0,3" Width="350" MouseLeave="validationMouseLeave"  />
                            <Label Width="50" Content="m²/g"/>
                        </StackPanel>

                        <!--Row 6, Column 0-->
                        <StackPanel Name="st_total_porosity" Orientation="Horizontal"  Grid.Row="6" Grid.Column="0">
                            <Label Content="Makroporosity (DPF-Porosity)total porosity" ToolTip="Makroporosity (DPF-Porosity)total porosity" Width="250"/>
                            <local:CustomTextBox x:Name="txb_total_porosity" GroupTitle="Chem./Phys. Analysis" LabelTitle="Makroporosity (DPF-Porosity)total porosity" TableName="ChemPhysAnalysis" FieldName="makroporosity_total_porosity" UpdateId="analysis_id" KeyUp="update_KeyUp" ContentType="int"   Margin="0,3" Width="350" MouseLeave="validationMouseLeave"  />
                            <Label Width="50" Content="%" />
                        </StackPanel>

                        <!--Row 7, Column 0,1-->
                        <StackPanel Name="st_avg_porosity" Orientation="Horizontal"  Grid.Row="7" Grid.Column="0">
                            <Label Content="Makroporosity Average pore radius in µm" ToolTip="Makroporosity Average pore radius in µm" Width="250"/>
                            <local:CustomTextBox x:Name="txb_avg_porosity" GroupTitle="Chem./Phys. Analysis" LabelTitle="Makroporosity Average pore radius in µm" TableName="ChemPhysAnalysis" FieldName="makroporosity_average_pore_radius" UpdateId="analysis_id" KeyUp="update_KeyUp" ContentType="int"  Margin="0,3" Width="350" MouseLeave="validationMouseLeave"  />
                            <Label Width="50" Content="µm"/> 
                        </StackPanel>

                        <!--Row 8, Column 0-->
                        <StackPanel Name="st_crist_function" Orientation="Horizontal" Grid.Row="8" Grid.Column="0">
                            <Label Content="Cristalline Washcoat Component Function" Width="250"/>
                            <local:CustomComboBox x:Name="cmb_crist_function" ValueQuery="select* from  CristallineWashcoatComponentFunction where cristalline_function_id = " GroupTitle="Chem./Phys. Analysis" LabelTitle="Cristalline Washcoat Component Function" TableName="ChemPhysAnalysis" FieldName="cristalline_function_id" UpdateId="analysis_id" SelectionChanged="update_SelectionChanged" Margin="0,3" Width="400" DisplayMemberPath="Function"  SelectedValuePath="Id" />
                        </StackPanel>

                        <!--Row 9, Column 0-->
                        <StackPanel Name="st_cris_components" Orientation="Horizontal"  Grid.Row="9" Grid.Column="0">
                            <Label Content="Cristalline Washcoat Components"  Width="250"/>
                            <local:CustomTextBox x:Name="txb_cris_components" GroupTitle="Chem./Phys. Analysis" LabelTitle="Cristalline Washcoat Components" TableName="ChemPhysAnalysis" FieldName="cristalline_washcoat_components_" UpdateId="analysis_id" KeyUp="update_KeyUp" ContentType="text" Margin="0,3" Width="400"/>
                        </StackPanel>

                        <!--Row 10, Column 0 -->
                        <StackPanel Name="st_crist_zeolith" Orientation="Horizontal" Grid.Row="10" Grid.Column="0">
                            <Label Content="Cristalline Washcoat Zeolith " Width="250"/>
                            <local:CustomCheckBox x:Name="chk_crist_zeolith" GroupTitle="Chem./Phys. Analysis" LabelTitle="Cristalline Washcoat Zeolith" TableName="ChemPhysAnalysis" UpdateId="analysis_id" Click="update_Click" FieldName="cristalline_washcoat_zeolith" Margin="2,10,0,0" />
                        </StackPanel>

                        <!--Row 11, Column0-->
                        <StackPanel Name="st_number_zone" Orientation="Horizontal" Grid.Row="11" Grid.Column="0">
                            <Label  Content="Zone coating (axial), Number of Zones" Width="250" ToolTip="Digital Light Microscopie For Accesment of Zones"/>
                            <local:CustomComboBox x:Name="cmb_number_zone" GroupTitle="Chem./Phys. Analysis" LabelTitle="Zone coating (axial), Number of Zones" TableName="ChemPhysAnalysis" UpdateId="analysis_id" SelectionChanged="update_SelectionChanged" FieldName="zone_coating" Height ="25" Margin="5,0,0,0" Width="395">
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="3"/>
                                    <ComboBoxItem Content="4"/>
                                    <ComboBoxItem Content="5"/>
                            </local:CustomComboBox>
                        </StackPanel>


                        <!--Row 12, Column0-->
                        <StackPanel Name="st_layer" Orientation="Horizontal" Grid.Row="12" Grid.Column="0">
                            <Label  Content="Layer" Width="250" ToolTip="Number of Waschcoat Layers, via SEM, EDX"/>
                            <local:CustomComboBox x:Name="cmb_layer" GroupTitle="Chem./Phys. Analysis" LabelTitle="Layer" TableName="ChemPhysAnalysis" FieldName="layer" UpdateId="analysis_id" SelectionChanged="update_SelectionChanged" Height ="25" Margin="5,0,0,0" Width="395">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                            </local:CustomComboBox>
                        </StackPanel>

                        <!--Row 13, Column 0-->
                        <StackPanel Name="st_ch_dispersity" Orientation="Horizontal" Grid.Row="13" Grid.Column="0">
                            <Label Content="Dispersity" Width="250" ToolTip="Size Distribution of Active Centres, TEM, EDX (Diameter of Active Centre)"/>
                            <local:CustomTextBox x:Name="txb_ch_dispersity" GroupTitle="Chem./Phys. Analysis" LabelTitle="Dispersity" TableName="ChemPhysAnalysis"  FieldName="dispersity" UpdateId="analysis_id" KeyUp="update_KeyUp" ContentType="double" Height="25" Width="350" MouseLeave="validationMouseLeave"  />
                            <Label Content="nm" Margin="5,0,0,0"/>
                        </StackPanel>


                        <!--Row 14, Column 0-->
                        <StackPanel Name="st_ch_heat_capacity" Orientation="Horizontal" Grid.Row="14" Grid.Column="0">
                            <Label Content="Heat capacity (at 500°C)" Width="250"/>
                            <local:CustomTextBox x:Name="txb_ch_heat_capacity" GroupTitle="Chem./Phys. Analysis"  LabelTitle="Heat capacity (at 500°C)" TableName="ChemPhysAnalysis"  FieldName="heat_capacity" KeyUp="update_KeyUp" ContentType="double" Height="25" Width="350"  MouseLeave="validationMouseLeave"   />
                            <Label Content="J/gK" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!--Row 0-7, Column 3-->
                        <StackPanel Name="st_chem_comment" Grid.RowSpan="7" Grid.Column="2" Orientation="Horizontal">
                            <Label Content="Comment" Width="100"  HorizontalAlignment="Left"/>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Width="400" HorizontalAlignment="Right">
                                <local:CustomTextBox  x:Name="txb_comment_chem" GroupTitle="Chem./Phys. Analysis" LabelTitle="Comment" TableName="ChemPhysAnalysis"  FieldName="comment_chem" KeyUp="update_KeyUp" ContentType="text"  Height="210" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                       </StackPanel>

                        
                        <!--File upload-->
                        <Label Grid.Row="7" Grid.Column="2"  Content="Related Files" FontWeight="Bold"/>
                        <!--List of files should be shown here!-->
                        <StackPanel Name="st_chem_files" Orientation="Horizontal" Grid.Row="8" Grid.Column="2" >
                            <Button Name="btn_chem_upload" Width="100" Height="25" HorizontalAlignment="Left" Content="Upload Files"  Click="btn_chem_upload_Click"/>
                            <Button Name="btn_chem_delete_file" Width="120" Height="25" HorizontalAlignment="Right" Margin="280,0,0,0" Background="Red" Content="Delete Chosen File"  Click="btn_chem_delete_file_Click"/>
                        </StackPanel>

                        <ScrollViewer  Grid.Row="9" Grid.Column="2" Grid.RowSpan="8"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                            <local:CustomListBox x:Name="chem_relatedFiles" GroupTitle="Chem./Phys. Analysis" LabelTitle="Files"/>
                        </ScrollViewer>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <!--Buttons for Control-->
        <DockPanel Grid.Column="0" Grid.Row="2" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <!--Add new catalyst entry to the central database-->
                <Button Width="200" Height="40" Name="btn_add_catalyst" Background="LightGreen" Click="btn_add_catalyst_Click">Add New Catalyst Data</Button>
                <!--Update the current catalyst entry to the central database-->
                <Button Width="200" Height="40" Name="btn_update_catalyst" Background="LightGreen" Click="btn_update_catalyst_Click">Update Existing Catalyst Data</Button>
                <!--Delete the current catalyst entry to the central database-->
                <Button Width="200" Height="40" Name="btn_delete_catalyst" Click="btn_delete_catalyst_Click" Background="Red">Delete Catalyst From Database</Button>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--Clear Fields-->
                <Button Width="170" Height="40" Name="btn_clear_field" Click="btn_clear_field_Click">Clear Fields</Button>
                <!--Copy current catalyst data-->
                <!--Save the catalyst data on the local disk to use it offline-->
                <Button Width="170" Height="40" Name="btn_saveon_localdisk" Click="btn_saveon_localdisk_Click">Save on Local Disk</Button>
                <!--Copy current catalyst data-->
                <Button Width="170" Height="40" Name="btn_copy_data" Click="btn_copy_data_Click">Copy Current Catalyst Data</Button>
                <!--Copy current catalyst data-->
                <Button Width="170" Height="40" Name="btn_paste_data" Click="btn_paste_data_Click">Paste Copied Catalyst Data</Button>
            </StackPanel>

        </DockPanel>
    </Grid>
</Window>
